<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppMainLayout">

    <android.support.v7.widget.CardView
        style="@style/AppCard"
        app:cardBackgroundColor="@color/lightPrimaryColor"
        app:cardCornerRadius="4dp"
        app:cardElevation="6dp">

        <LinearLayout
            style="@style/AppCardLayout">

            <TextView
                style="@style/AppQuestionHeader"
                android:text="@string/app_set_1_question_3_header" />

            <TextView
                style="@style/AppQuestionSubheader"
                android:text="@string/app_set_1_question_3_subheader" />

            <ScrollView
                style="@style/AppQuestionBlitzScroll" >

                <TextView
                    style="@style/AppQuestionText"
                    android:text="@string/app_set_1_question_3_blitz_text_1" />

            </ScrollView>

            </LinearLayout>

    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/answer_1"
        android:hint="@string/button_answer"
        style="@style/AppQuestionBlitzInput" />

    <android.support.v7.widget.CardView
        style="@style/AppCard"
        app:cardBackgroundColor="@color/lightPrimaryColor"
        app:cardCornerRadius="4dp">

            <ScrollView style="@style/AppQuestionBlitzScroll">

                <TextView
                    style="@style/AppQuestionText"
                    android:text="@string/app_set_1_question_3_blitz_text_2" />

            </ScrollView>

    </android.support.v7.widget.CardView>

    <LinearLayout
        style="@style/AppActionLayout">

        <EditText
            android:id="@+id/answer_2"
            style="@style/AppActionInput"
            android:hint="@string/button_answer"/>

        <Button
            style="@style/AppActionButton"
            android:text="@string/button_answer"
            android:onClick="activityQuizSetQuestion4"/>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppMainLayout">

    <android.support.v7.widget.CardView
        style="@style/AppCard"
        app:cardBackgroundColor="@color/lightPrimaryColor"
        app:cardCornerRadius="4dp"
        app:cardElevation="6dp">

        <LinearLayout
            style="@style/AppCardLayout">

            <TextView
                style="@style/AppQuestionHeader"
                android:text="Question 4" />

            <TextView
                style="@style/AppQuestionSubheader"
                android:text="(Black Box)"/>

            <ScrollView
                style="@style/AppQuestionScroll">

                <LinearLayout
                    style="@style/AppImageQuestionLayout">

                    <ImageView
                        style="@style/AppQuestionImage"
                        android:src="@drawable/ic_black_box"/>

                    <TextView
                        style="@style/AppQuestionText"
                        android:text="@string/app_set_1_question_4_text" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        style="@style/AppActionLayout">

        <EditText
            android:id="@+id/answer"
            style="@style/AppActionInput"
            android:hint="Answer"/>

        <Button
            style="@style/AppActionButton"
            android:text="Answer"
            android:onClick="activity_quiz_set_question_5"/>

    </LinearLayout>

</LinearLayout>